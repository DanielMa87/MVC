@*
@model List<MVC_Productos.Models.Producto> //vista mismo nombre de  referencia del " public IActionResult Index()" del controlador
cambie lo anterior para la busqueda, modelo agregado en carpeta viewmodel*@
@using MVC_Productos.Models.ProductoViewModel 
@model ProductoViewModel

<h2>Productos</h2>
@* <p>Nombre: @Model.Nombre</p>
<p>Descripcion: @Model.Descripcion</p>
<p>Precio: @Model.Precio</p> *@

<p>
     <a class="btn btn-success"asp-action="Create">Nuevo Producto</a>
</p>

<div class="row">
    <form asp-action="Index" asp-controller="producto" method="get">

        <p>

            Nombre: <input type="text" asp-for="BuscarTexto" placeholder="Buscar producto"/>
            <input type="submit" value="Buscar" class="btn btn-info"/>
           
        </p>

    </form>

</div>

<div class="row">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th> Nombre </th>
                <th> Descripcion</th>
                <th> Precio </th>     
                <th> Categoria </th>
                <th> Proveedor </th>
                </tr>
            
        </thead>
        <tbody>
            @foreach(var item in Model.Productos){
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Nombre)
                    </td>
               
                    <td>
                        @Html.DisplayFor(modelItem=>item.Descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem=>item.Precio)
                    </td>

                     <td>
                        @Html.DisplayFor(modelItem=>item.Categoria.Nombre) @*solo el nombre*@
                    </td>

                     <td>
                        @Html.DisplayFor(modelItem=>item.Proveedor.Nombre) @*solo el nombre*@
                    </td>
                    <td>
                        <a class="btn btn-primary"asp-action="Edit" asp-route-id=@item.Id>Editar</a>
                        <a class="btn btn-info"asp-action="Details" asp-route-id=@item.Id>Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id>Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>